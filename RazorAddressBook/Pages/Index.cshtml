@page
@using System.Reflection.Metadata

@model IndexModel

@{
    ViewData["Title"] = "Home page";
}


<div class="text-center m-4">
    <h1 class="display-4 text-2xl text-yellow-600">Welcome, who are you?</h1>
    <form method="post">
    <div class="flex justify-center ">
        <input class="border-2 m-4 p-1" type="text" asp-for="firstName" placeholder="First Name" />
        <input class="border-2 m-4 p-1" type="text" asp-for="lastName" placeholder="Last Name" />
    </div>
    <div class="">
        <button type="submit" class="bg-cyan-400 w-md py-4 border-2 rounded-md font-bold">Submit</button>
    </div>
    </form>
</div>
<div class="flex-col text-center m-4">
    <h2 class="text-2xl">My Name Is:</h2>
    @foreach (var name in Model.Names)
    {
        <h3>@name</h3>
    }
</div>
<div class="flex text-center mt-14 justify-center">
<a class="cursor-pointer text-3xl text-blue-600 underline" asp-page="Address">Addresses Page</a>
</div>
